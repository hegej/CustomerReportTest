@if (IsVisible)
{
    <div class="modal" tabindex="-1" style="display:block;" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmation</h5>
                </div>
                <div class="modal-body">
                    <p>@ConfirmationMessage</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="Confirm">Yes</button>
                    <button class="btn btn-secondary" @onclick="Cancel">No</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string ConfirmationMessage { get; set; } = "Are you sure?";
    [Parameter] public EventCallback<bool> ConfirmationResponse { get; set; }
    private bool IsVisible { get; set; } = false;

    public void Show()
    {
        IsVisible = true;
    }

    private async Task Confirm()
    {
        IsVisible = false;
        await ConfirmationResponse.InvokeAsync(true);
    }

    private async Task Cancel()
    {
        IsVisible = false;
        await ConfirmationResponse.InvokeAsync(false);
    }
}
